<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/all_head.ejs')%>
    <link rel="stylesheet" href="/css/register.css">
    <script src="/js/messages.js"></script>
    <script src = "/js/productValidations.js"> </script>
    <title>GamePlay - Editar Producto</title>
</head>

<body>
    <header>
        <%- include('../partials/all_header.ejs') %>
    </header>
            <!-- Breadcrumb Start -->
            <main class="product-detail">
                <div class="breadcrumb">
                    <nav class="breadcrumb bg-light mb-30">
                        <a class="level-01" href="/">Inicio > </a>
                        <a class="level-02" href="/">Productos > </a>
                        <span class="active">Editar Producto</span>
                    </nav>
                </div>
            <!-- Breadcrumb End -->
    <main>
        <h3 class="tituloregistro">EDITAR PRODUCTO</h3>
        <div class="contenedor-registro">
            <br>
            <div class="form-registro">
                <form class="registro" action="/productos/<%=product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <%-include ('../partials/product_form_fields.ejs', { product }) %> 
                    <div>
                        <button type="submit" class="registerbutton">ACTUALIZAR</button>
                    </div><br>
                </form>

                <form class="registro" action="/productos/<%= product.id %>?_method=DELETE" method="POST">
                    <div>
                        <button type="submit" id="delete-button" class="registerbutton">ELIMINAR</button>
                    </div><br>
                </form>
                    
        </div>
    </div>
    </main>
    <%- include ('../partials/all_footer.ejs') %>
    <script src="/js/previewProductImage.js"></script>
</body>

</html>